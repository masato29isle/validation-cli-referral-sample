      {
        "id": "Coverage.extension:insuredPersonSymbol",
        "path": "Coverage.extension",
        "sliceName": "insuredPersonSymbol",
        "short": "被保険者証記号情報",
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Coverage.extension:insuredPersonSymbol.url",
        "path": "Coverage.extension.url",
